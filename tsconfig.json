{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/@types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.spec.ts",
        "src/spec/**/*",
        "config/**/*",
        "config/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}
